@using HeulenderWolf.Components.Molecules

<div class="diferenciais-container">
    <div class="diferenciais-content">
        <h4 class="diferenciais-subtitle">DIFERENCIAIS</h4>
        <h2 class="diferenciais-title">Nós Oferecemos o Melhor Da Raça Shih-Tzu</h2>

        <div class="cards-container">
            <HWCard Pequeno="true" CSSColor="34d399" />

            <div class="card-item card-orange">
                <div class="icon-bg">
                    <img src="/img/icon2Diferenciais.png" alt="Ícone 2" class="icon" />
                </div>
                <h3>Suporte Veterinário</h3>
                <p>Tranquilidade inicial: suporte veterinário garantido.</p>
            </div>

            <div class="card-item card-purple">
                <div class="icon-bg">
                    <img src="/img/icon3Diferenciais.png" alt="Ícone 3" class="icon" />
                </div>
                <h3>Contrato de Compra e Venda</h3>
                <p>Seu investimento protegido com contrato oficial.</p>
            </div>

            <div class="card-item card-yellow">
                <div class="icon-bg">
                    <img src="/img/icon4Diferenciais.png" alt="Ícone 4" class="icon" />
                </div>
                <h3>Vacinados e Vermifugados</h3>
                <p>Prontinhos para brincar: sem “bichinhos” indesejados!</p>
            </div>

            <div class="card-item card-blue">
                <div class="icon-bg">
                    <img src="/img/icon5Diferenciais.png" alt="Ícone 5" class="icon" />
                </div>
                <h3>Microchip & Pedigree*</h3>
                <p>Disponíveis mediante consulta de condição.</p>
            </div>
        </div>

        <button class="cta-button">Comprar Filhote Shih-Tzu</button>
    </div>

    <div class="diferenciais-images">
        <img src="/img/cachorro2.png" alt="Cachorro esquerdo" class="dog dog-left" />
        <img src="/img/cachorro1.png" alt="Cachorro direito" class="dog dog-right" />
    </div>
</div>
