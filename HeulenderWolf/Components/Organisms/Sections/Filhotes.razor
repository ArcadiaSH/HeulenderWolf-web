@using HeulenderWolf.Components.Molecules

<!--
==============================
SECTION: FILHOTES
==============================
-->
<section class="filhotes-section" id="filhotes">
    <div class="container">

        <!-- Subtítulo da seção -->
        <h4 class="filhotes-subtitle">Nossos Filhotes</h4>

        <!-- Título principal -->
        <h2 class="filhotes-title">Escolha o Seu Melhor Amigo</h2>

        <!-- ============================================ -->
        <!-- CONTAINER PRINCIPAL DOS CARDS DOS FILHOTES -->
        <!-- ============================================ -->
        <div class="filhotes-cards">

            <!-- IMAGEM DECORATIVA (CACHORRO MACHO) -->
            <img src="/img/cachorro1.png" alt="Shih-Tzu Macho" class="filhote-img filhote-img-left" />

            <!-- ======================== -->
            <!-- CARD: MACHO -->
            <!-- ======================== -->
            <div class="filhote-card">
                <div class="filhote-info">

                    <!-- Gênero -->
                    <h3 class="filhote-gender">MACHO</h3>

                    <!-- Preço antigo -->
                    <p class="filhote-old-price">de R$2.200</p>

                    <!-- Preço atual -->
                    <p class="filhote-price">R$<strong>1.599</strong> <span>(a partir de)</span></p>

                    <!-- Lista de benefícios -->
                    <ul class="filhote-benefits">
                        <li><i class="bi bi-patch-check-fill filhotesCheckGreen"></i> Parcelamento: até 18x (ver condições)</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Vacinado</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Vermifugado</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Contrato de Compra e Venda</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Adestrado no tapete higiênico</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Garantia de Saúde</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Suporte Veterinário</li>
                    </ul>

                    <!-- Botão de chamada para ação -->
                    <a href="#contato" class="filhote-btn">Comprar Macho Shih-Tzu</a>
                </div>
            </div>

            <!-- IMAGEM DECORATIVA (CACHORRO FÊMEA) -->
            <img src="/img/cachorro2.png" alt="Shih-Tzu Fêmea" class="filhote-img filhote-img-right" />

            <!-- ======================== -->
            <!-- CARD: FÊMEA -->
            <!-- ======================== -->
            <div class="filhote-card">
                <div class="filhote-info">

                    <!-- Gênero -->
                    <h3 class="filhote-gender">FÊMEA</h3>

                    <!-- Preço antigo -->
                    <p class="filhote-old-price">de R$3.300</p>

                    <!-- Preço atual -->
                    <p class="filhote-price">R$<strong>2.399</strong> <span>(a partir de)</span></p>

                    <!-- Lista de benefícios -->
                    <ul class="filhote-benefits">
                        <li><i class="bi bi-patch-check-fill filhotesCheckGreen"></i> Parcelamento: até 18x (ver condições)</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Vacinado</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Vermifugado</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Contrato de Compra e Venda</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Adestrado no tapete higiênico</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Garantia de Saúde</li>
                        <li><i class="bi bi-patch-check-fill filhotesCheckYellow"></i> Suporte Veterinário</li>
                    </ul>

                    <!-- Botão de chamada para ação -->
                    <a href="#contato" class="filhote-btn">Comprar Fêmea Shih-Tzu</a>
                </div>
            </div>

        </div> <!-- FIM DO CONTAINER DE CARDS -->
    </div>
    <HWButtonIcon />
</section>
